@model IEnumerable<MyProject.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "部門管理";
}

<h1>部門管理</h1>

<p>
    <a asp-action="Create">新增</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="datetime">
                    @Html.DisplayNameFor(model => model.CreateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateName)
                </th>
                <th class="datetime">
                    @Html.DisplayNameFor(model => model.UpdateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateName)
                </th>
                <th class="final"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateName)
                    </td>
                    <td class="final">
                        <a asp-action="Edit" asp-route-id="@item.Id">編輯</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>