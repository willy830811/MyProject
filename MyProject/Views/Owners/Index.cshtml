@model IEnumerable<MyProject.ViewModels.OwnerViewModel>

@{
    ViewData["Title"] = "所有權人";
}

<h1>所有權人</h1>

@using (Html.BeginForm("Create", "Owners", FormMethod.Post))
{
    <dl class="row col-md-8 col-xl-6">
        <dt class = "col-sm-2">
            <label class="control-label">所有權人</label>
        </dt>
        <dd class = "col-sm-10">
            <input type="text" name="Name" class="form-control" />
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">關係</label>
        </dt>
        <dd class = "col-sm-10">
            <input type="text" name="Relationship" class="form-control" />
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">身分證字號</label>
        </dt>
        <dd class = "col-sm-10">
            <input type="text" name="IdNumber" class="form-control" />
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">電話</label>
        </dt>
        <dd class = "col-sm-10">
            <input type="text" name="Telephone" class="form-control" />
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">手機</label>
        </dt>
        <dd class="col-sm-10">
            <input type="text" name="Phone" class="form-control" />
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">戶籍地址</label>
        </dt>
        <dd class="col-sm-10">
            <input type="text" name="Residence" class="form-control" />
        </dd>
        <dt class="col-sm-2">
            <input type="submit" value="新增" class="btn btn-primary" />
        </dt>
        <dd class="col-sm-10">
        </dd>
    </dl>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relationship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Residence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Relationship)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Residence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">編輯</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Houses">回上頁</a>
</div>
